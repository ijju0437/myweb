pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'myagentcred', url: 'https://github.com/ijju0437/myweb.git
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy"){
            steps{
                sshagent(['user']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war ubuntu@ec2-user@18.117.105.214:/home/ubuntu@ec2-user/apache-tomcat-9.0.52/webapps/
                    
                    ssh ubuntu@ec2-user@18.117.105.214 /root/ec2-user/apache-tomcat-9.0.52/bin/shutdown.sh
                    
                    ssh ubuntu@ec2-user@18.117.105.214 /root/ec2-user/apache-tomcat-9.0.52/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
